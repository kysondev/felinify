{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@auth/*": ["src/features/core/auth/*"],
      "@deck/*": ["src/features/core/deck/*"],
      "@study/*": ["src/features/core/study/*"],
      "@explore/*": ["src/features/core/explore/*"],
      "@review/*": ["src/features/core/review/*"],
      "@subscription/*": ["src/features/core/subscription/*"],
      "@user/*": ["src/features/core/user/*"],
      "@email/*": ["src/features/core/email/*"],
      "@ai/*": ["src/features/core/ai/*"],
      "@common/*": ["src/features/common/*"],
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"],
      "@ui/*": ["src/components/ui/*"]
    },
    "target": "ES2023",
    "types": ["node"]
  },
  "include": [
    "eslint.config.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "app/api/og/route.js"  ],
  "exclude": ["node_modules"]
}
